<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="@dimen/offset_2"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white_alpha12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/offset_12">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/scanned_device_viewholder_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_18"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                android:text="address"
                android:textColor="@color/grey_50"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rssi: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                android:textColor="@color/grey_100"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/scanned_device_viewholder_rssi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14"
                android:textColor="@color/grey_100"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                android:text="---"/>
            <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="    |"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:textColor="@color/grey_100"
            android:textSize="@dimen/font_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                android:textColor="@color/grey_100"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/scanned_device_viewholder_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14"
                android:textColor="@color/grey_100"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                android:text="---"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:textColor="@color/grey_100"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                android:text="Time: "/>
            <TextView
                android:id="@+id/scanned_device_viewholder_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:textColor="@color/grey_100"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="---"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>